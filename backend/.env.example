# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to git

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8000
NODE_ENV=development
BACKEND_URL="http://localhost:8000"

# ===========================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# ===========================================
# Get these from https://supabase.com/
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your_supabase_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_here"

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate a strong random string for JWT (use: openssl rand -base64 32)
JWT_SECRET="your_super_secret_jwt_key_here_make_it_long_and_random"

# ===========================================
# EMAIL CONFIGURATION (Required for user notifications)
# ===========================================
# SMTP Configuration (Brevo, SendGrid, etc.)
SMTP_HOST="smtp.brevo.com"
SMTP_PORT="587"
SMTP_USER="your_smtp_user@example.com"
SMTP_PASS="your_smtp_password_here"
ADMIN_EMAIL="admin@choiceproperties.com"

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
WEBSITE_URL="http://localhost:5000"

# ===========================================
# IMAGE STORAGE (ImageKit)
# ===========================================
# Sign up at https://imagekit.io for free account
IMAGEKIT_PUBLIC_KEY="your_imagekit_public_key_here"
IMAGEKIT_PRIVATE_KEY="your_imagekit_private_key_here"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_endpoint"
